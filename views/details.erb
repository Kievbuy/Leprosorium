<h2>Post details:</h2>

<p>

  <br>
    <p>
      <%= @row['content'] %>
      <br>
    <h6><%= @row['created_date'] %></h6>
    </p>

</p>

<hr>

<h4>Comments:</h4>
<form action="/details/<%= @row['id'] %>" method="POST" role="form">

  <textarea name="content" class="form-control" cols="30" rows="6" placeholder="Enter your comment text"></textarea>
  <br>
  <button type="submit" class="btn btn-default btn-primary">Add Comment</button>

</form>
<br>
<h3>Comments:</h3>

<% @comments.each do |comment| %>
    <p>
    <%= comment['content'] %>
      <br>
      <br>
      <small style="color: #999999">Added at <%= comment['created_date'] %></small>
    </p>
    <hr>
<% end %>